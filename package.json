    "maxmind": "^4.1.4",
    "move-file": "^2.0.0",
    "multistream": "^4.0.0",
    "node-polyglot": "^2.4.0",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.3",
